# Alpha Read Scraper Environment Variables
# Copy this file to .env and fill in your actual credentials

# Alpha Read Login Credentials
ALPHAREAD_EMAIL=your.actual.email@example.com
ALPHAREAD_PASSWORD=your_actual_password

# Scraper Settings
ENABLE_LOGIN=true
SHOW_BROWSER=false

# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# Database Settings
ENABLE_DATABASE_UPLOAD=true
TABLE_NAME=student_data

# Note: The scraper now fetches student lists from the 'students' table in the database
# instead of reading from emails.txt or emails.json files for security reasons.
# Make sure your 'students' table is populated with name and email columns. 